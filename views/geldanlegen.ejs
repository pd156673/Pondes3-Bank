<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="styles.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
<title>Borken-Bank - Geld anlegen</title>
<style>
        /* Allgemeiner Style */
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #74ebd5, #acb6e5);
            margin: 0;
            color: #444;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
        }
 
        header {
            width: 100%;
            background: #ffffff;
            padding: 10px 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
 
        header i {
            font-size: 2rem;
            color: #5c67f2;
        }
 
        header a {
            margin: 0 10px;
            text-decoration: none;
            color: #444;
            font-weight: bold;
        }
 
        header a:hover {
            color: #5c67f2;
        }
 
        .container {
            background: #ffffff;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            padding: 30px 20px;
            width: 90%;
            max-width: 400px;
            margin: 20px 0;
            text-align: center;
        }
 
        h1 {
            color: #5c67f2;
            font-size: 1.8rem;
            margin-bottom: 20px;
        }
 
        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }
 
        select, button {
            width: 100%;
            padding: 12px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 10px;
            font-size: 1rem;
        }
 
        button {
            background-color: #5c67f2;
            color: white;
            font-weight: bold;
            border: none;
            cursor: pointer;
            transition: background 0.3s ease;
        }
 
        button:hover {
            background-color: #4a55c0;
        }
 
        #ergebnis {
            font-size: 1.2rem;
            color: #444;
            margin-top: 15px;
            background: #f4f4f9;
            padding: 10px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
 
        footer {
            margin-top: auto;
            background: #ffffff;
            text-align: center;
            padding: 10px 20px;
            width: 100%;
            box-shadow: 0 -4px 10px rgba(0, 0, 0, 0.1);
        }
 
        footer a {
            text-decoration: none;
            color: #5c67f2;
            font-weight: bold;
        }
 
        footer p {
            margin: 5px 0;
        }
</style>
<script>
        function zinsBerechnen() {
            const kapital = parseFloat(document.getElementById("kapital").value);
            const zinssatz = parseFloat(document.getElementById("zinssatz").value) / 100;
            const jahre = parseInt(document.getElementById("jahre").value);
 
            const zinsen = kapital * zinssatz * jahre;
            document.getElementById("ergebnis").textContent = 
                `Die Zinsen betragen ${zinsen.toFixed(2)} €.`;
        }
</script>
</head>
<body>
<!-- Header -->
<header>
<i class="fa-solid fa-piggy-bank"></i>
<hr>
<a href="/"><i class="fa-solid fa-home"></i></a> 
<a href="hilfe"><i class="fa-solid fa-phone"></i> Hilfe</a> 
<a href="postfach"><i class="fa-solid fa-envelope"></i> Postfach</a>
<a href="profil"><i class="fa-solid fa-user"></i> Profil</a>
<a href="agb"><i class="fa-solid fa-file-lines"></i> AGB</a>
<a href="login"><i class="fa fa-sign-out"></i> Abmelden</a>
</header>
 
    <!-- Main Content -->
<div class="container">
<h1>Zinsrechner</h1>
<form id="zinsForm">
<label for="kapital">Kapital (in €):</label>
<select id="kapital">
<option value="1000">1.000</option>
<option value="5000">5.000</option>
<option value="10000">10.000</option>
</select>
 
            <label for="zinssatz">Zinssatz (in %):</label>
<select id="zinssatz">
<option value="1">1%</option>
<option value="2">2%</option>
<option value="5">5%</option>
</select>
 
            <label for="jahre">Laufzeit (in Jahren):</label>
<select id="jahre">
<option value="1">1 Jahr</option>
<option value="5">5 Jahre</option>
<option value="10">10 Jahre</option>
</select>
 
            <button type="button" onclick="zinsBerechnen()">Berechnen</button>
</form>
<p id="ergebnis"></p>
</div>
 
    <!-- Footer -->
<footer>
<p>Borken-Bank AG</p>
<p>Geschäftsführer: Hans Dampf, IBAN: DE 55 28 000 000</p>
<a href="https://www.borken-bank.de">Zur Homepage</a> 
</footer>
</body>
</html>